<Window x:Class="AdressbuckWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdressbuckWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="876.829" SizeToContent="Width">
    <Grid>

        <DataGrid x:Name="dataGrid" Margin="10,167,10,10" RowEditEnding="DataGrid_RowEditEnding" CellEditEnding="DataGrid_CellEditEnding">

        </DataGrid>
        <StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" IsReadOnly="True" DropDownClosed="ComboBox1_DropDownClosed" Margin="10,10,0,0"/>
                <Rectangle Width="100">

                </Rectangle>
                <Button x:Name="button" Content="Suche" Width="123" Margin="10,10,0,0" HorizontalAlignment="Left" Background="#FFDDDDDD" Click="Button_Click_1"/>
                <Button x:Name="button2" Content="Eintrag erstellen" Width="123" Margin="10,10,0,0" HorizontalAlignment="Left" Click="Button2_Click"/>
                <Button x:Name="button3" Content="Eintrag Löschen" Width="123" Margin="10,10,0,0" HorizontalAlignment="Left" Click="Button3_Click"/>
            </StackPanel>
            <GroupBox x:Name="groupBox" Header="GroupBox&#x9;&#x9;&#x9;&#x9;" Margin="10,10,10,0" Height="115" VerticalAlignment="Top">
                <StackPanel x:Name="StackPanel_SearchGroup" Orientation="Horizontal" Margin="0,0,-2,0"/>
            </GroupBox>
        </StackPanel>



    </Grid>
</Window>
