<UserControl x:Name="SearchGroup" x:Class="AdressbuckWPF.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdressbuckWPF"
             mc:Ignorable="d" Height="45.24" Width="121.651" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0">
    <Grid x:Name="grid_searchGroup" >

        <StackPanel x:Name="StackPanelTop" Orientation="Horizontal" >
            <StackPanel Width="99" HorizontalAlignment="Center" VerticalAlignment="Top" Height="51">
                <ComboBox x:Name="comboBoxElement" DropDownClosed="ComboBoxElement_DropDownClosed"/>
                <TextBox x:Name="textBoxElement" Width="100" Height="23" TextWrapping="Wrap" Text="Eingabefeld"  VerticalAlignment="Bottom" LostFocus="TextBoxElement_LostFocus" GotFocus="TextBoxElement_GotFocus" Margin="0,0,-1,0"/>
            </StackPanel>
            <Button x:Name="button1" Content="X" Width="22" FontSize="15" Foreground="Red"  Click="Button1_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
