<UserControl x:Class="AdressbuchWPF.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdressbuchWPF"
             mc:Ignorable="d" d:DesignWidth="200
             " Height="49.452" Margin="0,0,25,0">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="InputBox_TextBlock" TextWrapping="Wrap" Text="TextBlock" Height="23" Foreground="White"/>
            <TextBox x:Name="InputBox_TextBox" Height="32" TextWrapping="Wrap" LostFocus="InputBox_TextBox_LostFocus" KeyDown="InputBox_TextBox_KeyDown" />

        </StackPanel>

    </Grid>
</UserControl>
